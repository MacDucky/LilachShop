         <yAxis>
            <NumberAxis fx:id="complantNumber" label="כמות הכנסה בשקלים" side="LEFT" />
         </yAxis>
      </BarChart>
      <DatePicker fx:id="endDate" layoutX="241.0" layoutY="439.0" prefHeight="25.0" prefWidth="69.0" />
      <Label layoutX="619.0" layoutY="443.0" text="התחלה:" />
      <DatePicker fx:id="startDate" layoutX="536.0" layoutY="439.0" prefHeight="25.0" prefWidth="69.0" />
      <Label layoutX="618.0" layoutY="404.0" text="בחר פרק זמן:" />
      <Button fx:id="okBtn" layoutX="415.0" layoutY="477.0" mnemonicParsing="false" onAction="#updateBarChart" text="בחר" />
      <ComboBox fx:id="storeList" layoutX="346.0" layoutY="518.0" onAction="#onChangeStore" prefWidth="150.0" />
      <Label fx:id="chooseStoreLabel" layoutX="518.0" layoutY="522.0" text="בחר חנות:" />
      <Label layoutX="727.0" layoutY="80.0" prefHeight="37.0" prefWidth="159.0" text="סך כל ההכנסות לפרק זמן זה:" />
      <Label fx:id="totalIncome" layoutX="793.0" layoutY="133.0" />
      <Button fx:id="newScreenBtn" layoutX="28.0" layoutY="24.0" mnemonicParsing="false" onAction="#onNewScreenBtnClick" text="פתיחת מסך נוסף להשוואה" />
   </children>
</AnchorPane>
