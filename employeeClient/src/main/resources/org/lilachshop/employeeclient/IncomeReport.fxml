<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="572.0" prefWidth="815.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.lilachshop.employeeclient.IncomeReportController">
   <children>
      <BarChart fx:id="complaintBarChart" layoutX="140.0" layoutY="24.0" prefHeight="380.0" prefWidth="531.0" title="כמות הכנסה לפי ימים">
         <xAxis>
            <CategoryAxis fx:id="days" label="תאריך" side="BOTTOM" />
