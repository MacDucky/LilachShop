<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="572.0" prefWidth="698.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.lilachshop.employeeclient.ComplaintReportController">
   <children>
      <BarChart fx:id="complaintBarChart" layoutX="65.0" layoutY="30.0" prefHeight="380.0" prefWidth="531.0" title="מספר תלונות לפי ימים">
        <xAxis>
          <CategoryAxis fx:id="days" label="ימים" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="complantNumber" label="מספר תלונות" side="LEFT" />
        </yAxis>
      </BarChart>
      <Label layoutX="222.0" layoutY="433.0" text="סיום:" />
      <DatePicker fx:id="endDate" layoutX="133.0" layoutY="440.0" prefHeight="25.0" prefWidth="69.0" />
      <Label layoutX="511.0" layoutY="444.0" text="התחלה:" />
      <DatePicker fx:id="startDate" layoutX="428.0" layoutY="440.0" prefHeight="25.0" prefWidth="69.0" />
      <Label layoutX="497.0" layoutY="410.0" text="בחר פרק זמן:" />
      <Button fx:id="okBtn" layoutX="330.0" layoutY="476.0" mnemonicParsing="false" onAction="#updateBarChart" text="בחר" />
      <ComboBox fx:id="storeList" layoutX="272.0" layoutY="515.0" onAction="#onChangeStore" prefWidth="150.0" />
      <Label fx:id="chooseStoreLabel" layoutX="444.0" layoutY="519.0" text="בחר חנות:" />
      <Button fx:id="newScreenBtn" layoutX="14.0" layoutY="18.0" mnemonicParsing="false" onAction="#onNewScreenBtnClick" text="פתיחת מסך נוסף להשוואה" />
   </children>
</AnchorPane>
